{
  "type": "minecraft:multi_action",
  "title": {
    "text": "Hot Potato",
    "bold": true
  },
  "external_title": "Hot Potato",
  "body": [
    {
      "type": "minecraft:item",
      "item": {
        "id": "minecraft:baked_potato"
      }
    },
    {
      "type": "minecraft:plain_message",
      "contents": "Configure & start the Hot Potato minigame"
    }
  ],
  "inputs": [
  {
      "type": "minecraft:text",
      "key": "dialog_explosion_time",
      "label": "Time until explosion (s)",
      "initial": "900"
    },
    {
      "type": "minecraft:text",
      "key": "dialog_cooldown",
      "label": "Give to person cooldown (s)",
      "initial": "5"
    },
    {
      "type": "minecraft:text",
      "key": "dialog_cooldown_before_start",
      "label": "Cooldown before game starts (s)",
      "initial": "10"
    },
    {
      "type": "minecraft:text",
      "key": "dialog_speed_before_explosion",
      "label": "Speed before explosion (s)",
      "initial": "20"
    },
    {
      "type": "minecraft:boolean",
      "key": "dialog_player_particles",
      "label": "Selected player has particles",
      "initial": false
    },
    {
      "type": "minecraft:single_option",
      "key": "dialog_player_display",
      "label": {
        "translate": "hotpotato.dialog.player_display",
        "fallback": "Player Display"
      },
      "options": [
        {
          "id": "0",
          "display": {
            "translate": "hotpotato.dialog.player_display.none",
            "fallback": "None"
          }
        },
        {
          "id": "1",
          "display": {
            "translate": "hotpotato.dialog.player_display.glowing",
            "fallback": "Glowing Effect (player who got the potato) + Team Color (players in the game)"
          },
          "initial": true
        },
        {
          "id": "2",
          "display": {
            "translate": "hotpotato.dialog.player_display.team",
            "fallback": "Team Color (players in the game)"
          }
        }
      ]
    },
    {
      "type": "minecraft:single_option",
      "key": "dialog_player_display_color",
      "label": {
        "translate": "hotpotato.dialog.player_display_color",
        "fallback": "Player Display Color"
      },
      "options": [
        {
          "id": "0",
          "display": {
            "translate": "hotpotato.dialog.player_display.black",
            "fallback": "Black"
          }
        },
        {
          "id": "1",
          "display": {
            "translate": "hotpotato.dialog.player_display.dark_blue",
            "fallback": "Dark Blue"
          }
        },
        {
          "id": "2",
          "display": {
            "translate": "hotpotato.dialog.player_display.dark_green",
            "fallback": "Dark Green"
          }
        },
        {
          "id": "3",
          "display": {
            "translate": "hotpotato.dialog.player_display.dark_aqua",
            "fallback": "Dark Aqua"
          }
        },
        {
          "id": "4",
          "display": {
            "translate": "hotpotato.dialog.player_display.dark_red",
            "fallback": "Dark Red"
          }
        },
        {
          "id": "5",
          "display": {
            "translate": "hotpotato.dialog.player_display.dark_purple",
            "fallback": "Dark Purple"
          }
        },
        {
          "id": "6",
          "display": {
            "translate": "hotpotato.dialog.player_display.gold",
            "fallback": "Gold"
          }
        },
        {
          "id": "7",
          "display": {
            "translate": "hotpotato.dialog.player_display.gray",
            "fallback": "Gray"
          }
        },
        {
          "id": "8",
          "display": {
            "translate": "hotpotato.dialog.player_display.dark_gray",
            "fallback": "Dark Gray"
          }
        },
        {
          "id": "9",
          "display": {
            "translate": "hotpotato.dialog.player_display.blue",
            "fallback": "Blue"
          }
        },
        {
          "id": "10",
          "display": {
            "translate": "hotpotato.dialog.player_display.green",
            "fallback": "Green"
          }
        },
        {
          "id": "11",
          "display": {
            "translate": "hotpotato.dialog.player_display.aqua",
            "fallback": "Aqua"
          }
        },
        {
          "id": "12",
          "display": {
            "translate": "hotpotato.dialog.player_display.red",
            "fallback": "Red"
          }
        },
        {
          "id": "13",
          "display": {
            "translate": "hotpotato.dialog.player_display.light_purple",
            "fallback": "Light Purple"
          }
        },
        {
          "id": "14",
          "display": {
            "translate": "hotpotato.dialog.player_display.yellow",
            "fallback": "Yellow"
          }
        },
        {
          "id": "15",
          "display": {
            "translate": "hotpotato.dialog.player_display.white",
            "fallback": "White"
          }
        }
      ]
    }
  ],
  "actions": [
    {
      "label": "Start game",
      "action": {
        "type": "minecraft:dynamic/run_command",
        "template": "function hotpotato:app/game/init {dialog_explosion_time:$(dialog_explosion_time), dialog_cooldown_before_start:$(dialog_cooldown_before_start), dialog_player_display:$(dialog_player_display), dialog_cooldown:$(dialog_cooldown), dialog_speed_before_explosion:$(dialog_speed_before_explosion), dialog_player_particles:$(dialog_player_particles), dialog_player_display_color:$(dialog_player_display_color)}"
      }
    },
    {
      "label": "Cancel game",
      "action": {
        "type": "minecraft:run_command",
        "command": "function hotpotato:app/game/end/force"
      }
    }
  ]
}